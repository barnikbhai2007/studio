rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profiles: Allow public reading for leaderboard and results.
    // Writes restricted to the owner, but update is open to signed-in users
    // to allow game results to be logged by either participant.
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Game Rooms: Allow public reading so anyone can join via code and see stats.
    // Allow any signed-in user to create or update a room.
    match /gameRooms/{roomId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      // Allow subcollections (rounds, emotes) to be handled by players.
      match /{allSubdocs=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Battle Histories: Allow public read, write for signed-in players.
    match /battleHistories/{bhId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Footballers: Static game data is publicly readable.
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}