rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: Publicly readable for leaderboard and stats.
    // Writes restricted to the owner for profile setup.
    // Updates allowed for signed-in users to allow game result recording.
    match /userProfiles/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn();
    }

    // Game Rooms and subcollections: 
    // Allow public read for match history, joining, and daily stats.
    // Allow write for any signed-in player to enable game logic and joining.
    match /gameRooms/{roomId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // Battle Histories: Collective stats between players.
    match /battleHistories/{bhId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Footballers: Static game data.
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}