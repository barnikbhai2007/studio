rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Is the request from a signed-in user?
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: Publicly readable for leaderboard and stats.
    // Writes restricted to signed-in users to permit profile setup and game stats.
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Game Rooms: 
    // Allow public read for match history, joining, and stats (fixes auth: null error).
    // Allow write for any signed-in player to enable game logic.
    match /gameRooms/{roomId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      // Nested collections (rounds, emotes) follow same logic
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // Battle Histories: Collective stats between players.
    match /battleHistories/{bhId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Footballers: Static game data.
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}