
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isParticipant(p1, p2) {
      return isSignedIn() && (request.auth.uid == p1 || request.auth.uid == p2);
    }

    // User Profiles: Allow public reading, but restricted creation to owner.
    // Update is allowed for signed-in users to permit game outcome stat increments (wins/losses).
    match /userProfiles/{userId} {
      allow get: if true;
      allow list: if true;
      allow create: if isOwner(userId);
      allow update: if isSignedIn();
    }

    match /gameRooms/{gameRoomId} {
      allow list: if true;
      allow get: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      
      match /gameRounds/{roundId} {
        allow read, write: if isSignedIn();
      }

      match /emotes/{emoteId} {
        allow read, write: if isSignedIn();
      }
    }

    match /battleHistories/{battleHistoryId} {
      allow read, write: if isSignedIn();
    }

    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}
