rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profiles: Publicly readable for leaderboards and result identification.
    // Writes restricted to the owner.
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Game Rooms: Publicly readable to allow for landing page stats and result history.
    // Writes and sub-collections restricted to authenticated users.
    match /gameRooms/{gameRoomId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      // Sub-collections (rounds, emotes) require authentication.
      match /{allSubdocs=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Battle Histories: Authenticated access for logging head-to-head stats.
    match /battleHistories/{bhId} {
      allow read, write: if isSignedIn();
    }

    // Footballers: Static game data is publicly readable for all users.
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}