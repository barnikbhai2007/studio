rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: Publicly readable for leaderboard and match results
    match /userProfiles/{userId} {
      allow read: if true;
      allow create, update: if isSignedIn();
    }

    // Game Rooms: Allow reading (get/list) for all to support history and joining
    // Using a recursive wildcard to ensure all sub-collections are also readable
    match /gameRooms/{roomId} {
      allow read: if true;
      allow create, update: if isSignedIn();
      
      match /{allChildren=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Battle Histories: Real-time syncing between players
    match /battleHistories/{battleHistoryId} {
      allow read, write: if isSignedIn();
    }

    // Footballers: Static data, publicly readable
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}