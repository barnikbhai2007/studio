rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: Publicly readable for leaderboard and results.
    // Creation/Update allowed for authenticated users.
    match /userProfiles/{userId} {
      allow read: if true;
      allow create, update: if isSignedIn();
    }

    // Game Rooms: Allow public list/get for today's stats and match history.
    // Writes restricted to authenticated users.
    match /gameRooms/{roomId} {
      allow read: if true;
      allow create, update: if isSignedIn();
      
      // Sub-collections (rounds, emotes)
      match /{allChildren=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Battle Histories: Used for H2H syncing
    match /battleHistories/{bhId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Footballers: Static game data
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}