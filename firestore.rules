rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Is the request from a signed-in user?
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: Publicly readable for leaderboard and stats.
    // Writes restricted to signed-in users.
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Game Rooms: 
    // Allow public read (get and list) for match history, joining, and stats.
    // This fixes the 'auth: null' permission error on the landing and result pages.
    match /gameRooms/{roomId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      // Nested collections (rounds, emotes, etc.) inherit public read access
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // Battle Histories: Aggregated stats between players.
    match /battleHistories/{bhId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Footballers: Static game data.
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}