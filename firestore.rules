rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isParticipant(p1, p2) {
      return isSignedIn() && (request.auth.uid == p1 || request.auth.uid == p2);
    }

    // Allow public listing of userProfiles and gameRooms for landing page stats
    match /userProfiles/{userId} {
      allow get: if true;
      allow list: if true;
      allow create, update: if isOwner(userId);
    }

    match /gameRooms/{gameRoomId} {
      allow list: if true;
      allow get: if true; // Required for results page
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      
      match /gameRounds/{roundId} {
        allow read, write: if isSignedIn();
      }
    }

    match /battleHistories/{battleHistoryId} {
      allow read, write: if isSignedIn();
    }

    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}
