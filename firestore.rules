
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profiles: Allow public reading for leaderboard and identification
    match /userProfiles/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isSignedIn();
    }

    // Explicitly allow listing userProfiles
    match /userProfiles {
      allow list: if true;
    }

    // Game Rooms: Broadened permissions for match listing and sub-collections
    match /gameRooms/{roomId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
      
      // Allow access to sub-collections (rounds, emotes)
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // Explicitly allow listing the gameRooms collection for match history
    match /gameRooms {
      allow list: if true;
    }

    // Battle Histories: Real-time syncing between players
    match /battleHistories/{battleHistoryId} {
      allow read, write: if isSignedIn();
    }

    // Footballers: Static data, publicly readable
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}
