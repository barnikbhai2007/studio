rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Is the request from a signed-in user?
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: Publicly readable for leaderboard and stats.
    // Writes restricted to the owner of the profile.
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Game Rooms & Subcollections:
    // Allow public read (get and list) for match history, joining, and stats.
    // Use recursive wildcard to ensure all queries (including rounds/emotes) are permitted.
    match /gameRooms/{allDocs=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Battle Histories: Aggregated stats between players.
    match /battleHistories/{bhId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Footballers: Static game data.
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}