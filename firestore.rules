rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /userProfiles/{userId} {
      // Allow public listing so the homepage can count total players
      allow list: if true;
      allow get: if isSignedIn();
      allow create, update: if isOwner(userId);
      allow delete: if false;
    }

    match /gameRooms/{gameRoomId} {
      // Allow public listing so the homepage can count rooms created today
      allow list: if true;
      allow get: if isSignedIn();
      allow create: if isSignedIn();
      
      // Allow update for participants OR someone joining an empty P2 slot
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.player1Id || 
        request.auth.uid == resource.data.player2Id ||
        (resource.data.player2Id == null)
      );
      
      allow delete: if isSignedIn() && request.auth.uid == resource.data.player1Id;

      match /gameRounds/{roundId} {
        allow read, write: if isSignedIn();
      }
    }
  }
}