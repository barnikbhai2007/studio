rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profiles: Publicly readable for leaderboards/results.
    // Writes restricted to signed-in users.
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Game Rooms: Restricted to authenticated users for all operations.
    match /gameRooms/{roomId} {
      allow read, write: if request.auth != null;
      
      // Apply the same authentication requirement to all sub-collections (rounds, emotes).
      match /{allSubdocs=**} {
        allow read, write: if request.auth != null;
      }
    }

    // Battle Histories: Authenticated access for logging head-to-head stats.
    match /battleHistories/{bhId} {
      allow read, write: if isSignedIn();
    }

    // Footballers: Static game data is publicly readable for all users.
    match /footballers/{footballerId} {
      allow read: if true;
    }
  }
}