
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a player's profile in the game, linked to their Google account, storing personal details and game statistics.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity."
        },
        "googleAccountId": {
          "type": "string",
          "description": "The unique identifier provided by Google for the authenticated user."
        },
        "displayName": {
          "type": "string",
          "description": "The user's public display name."
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL to the user's profile picture.",
          "format": "uri"
        },
        "totalGamesPlayed": {
          "type": "number",
          "description": "Total number of games the user has participated in."
        },
        "totalWins": {
          "type": "number",
          "description": "Total number of games won by the user."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp when the user profile was initially created.",
          "format": "date-time"
        },
        "lastLoginAt": {
          "type": "string",
          "description": "Timestamp of the user's most recent login.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "googleAccountId",
        "displayName",
        "createdAt",
        "lastLoginAt"
      ]
    },
    "Footballer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Footballer",
      "type": "object",
      "description": "Stores comprehensive data for a specific footballer.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier."
        },
        "name": {
          "type": "string",
          "description": "Full name."
        },
        "country": {
          "type": "string",
          "description": "Country name."
        },
        "position": {
          "type": "string",
          "description": "Playing position."
        },
        "rarity": {
          "type": "string",
          "description": "Rarity level."
        },
        "cardImageUrl": {
          "type": "string",
          "description": "Card image URL.",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "name",
        "country",
        "position",
        "rarity"
      ]
    },
    "GameRoom": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GameRoom",
      "type": "object",
      "description": "Represents a single 1v1 game session.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique room code."
        },
        "creatorId": {
          "type": "string",
          "description": "ID of the room creator."
        },
        "player1Id": {
          "type": "string",
          "description": "ID of player 1."
        },
        "player2Id": {
          "type": "string",
          "description": "ID of player 2."
        },
        "status": {
          "type": "string",
          "description": "Room status: Lobby, InProgress, Completed."
        },
        "healthOption": {
          "type": "number",
          "description": "Starting HP."
        },
        "player1CurrentHealth": {
          "type": "number",
          "description": "P1 HP."
        },
        "player2CurrentHealth": {
          "type": "number",
          "description": "P2 HP."
        },
        "currentRoundNumber": {
          "type": "number",
          "description": "Active round index."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "player1Id",
        "status",
        "healthOption",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/userProfiles/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "User profile data."
        }
      },
      {
        "path": "/gameRooms/{gameRoomId}",
        "definition": {
          "entityName": "GameRoom",
          "schema": {
            "$ref": "#/backend/entities/GameRoom"
          },
          "description": "Active game sessions."
        }
      }
    ]
  }
}
